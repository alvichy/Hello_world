def country_if():
    qadd = input('Where are you from? ')
    qadd = qadd.lower()

    hometown = ['uk', 'united kingdom', 'london']

    if qadd == hometown:
        print('HAHA!! Same here! I knew we were connected!')
    else:
        print('That must be a nice place. Hopefully I can visit soon.')
    print()



